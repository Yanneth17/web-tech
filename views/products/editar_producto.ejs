<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head", {title: producto.nombre}) %>  
</head>


<body class="body_edit_register">
<div>

<!--MENU-->
<header>
	<%- include("../partials/header") %>
</header>
<br>
<br>
<br>
<!--MENU-->

<div class="formulario_editar_producto">
	<div class="row">
		<div class="col-12">
			<h2 class="products-title">Estás editando el producto:
				<br>
				<i><%=producto.nombre%></i></h2>
				<br>
		</div>
	</div>
	<div class="col-12">
		<form id="editarproducto"  action="/products/editar_producto/<%= producto.id %>?_method=PUT" method="POST">
			<div class="row product-detail">
				<div class="div_editar_productos">
					<label for="name" class="form-label">Nombre del producto:</label>
					<input type="text" id="name" name="name" value="<%=producto.nombre%>" class="form-input">
				</div>
				<div class="div_editar_productos">
					<label for="price" class="form-label">Precio del producto:</label>
					<input type="text" id="price" name="price" value="<%=producto.precio %>" class="form-input">
				</div>
				<div class="div_editar_productos">
					<label for="discount" class="form-label">Descuento:</label>
					<input type="text" id="discount" name="discount" value="<%=producto.descuento %>" class="form-input">
				</div>
				<div class="div_editar_productos">
					<label for="category" class="form-label">Categoría:</label>
					<select name="category" id="category" class="form-input">
						<option value="">Elegí</option>
						<option value="electrodomesticos"<%=producto.id_categoriaFK %>>Electrodomesticos</option>
						<option value="computacion"<%=producto.id_categoriaFK %> >Computación</option>
						<option value="smartphones"<%=producto.id_categoriaFK %> >Smartphones</option>
						<option value="Pc Gamer Armada">Pc Gamer Armada</option>
                        <option value="Consolas">Consolas</option>
                        <option value="Auriculares, parlantes y audio">Auriculares, parlantes y audio</option>
                        <option value="Conectividad">Conectividad</option>
					</select>
				</div>
				<div class="div_editar_productos">
					<label for="description" class="form-label">Descipción:</label>
					<textarea name="description" id="description" value="<%=producto.descripcion %>" class="form-input"></textarea>
				</div>
				<hr>
				<div class="col-12">
					<button type="submit" class="button-compra">Guardar producto</button>
				</div>
			</div>
		</form>
	</div>

</div>

</div>
    
<script src="/js/formularioeditar.js"> </script>
      <!--FOOTER-->
    

    <%- include("../partials/footer") %>  
  
    
    <!--FOOTER-->

</body>

</html>